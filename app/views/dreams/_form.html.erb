<div class="container">
  <%= simple_form_for @dream do |f| %>

  <div class="form-group">
     <%= f.input :title , class: "form-control" %>
  </div>

  <div class="form-group row">
    <div class="col-xs-12 col-sm-8">
      <%= f.input :category, collection: ["Drama", "Comedy", "Thriller", "Action", "Fantastic", "Horror", "Science Fiction", "Polar", "Period film", "Animated film", "Storytelling", "Western", "Parody", "Musical comedy", "Documentary"], class: "form-control"%>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= f.input :price, class: "form-control" %>
    </div>
  </div>

 <div class="form-group">
    <%= f.input :description , class: "form-control"%>
</div>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <br>
  <%= f.button :submit, class: "btn btn-secondary" %>
</div>
<% end %>


</div>



